@keyframes alpha {from {opacity: 1;} to {opacity: 0.2;}}
@-moz-keyframes alpha {from {opacity: 1;} to {opacity: 0.2;}}
@-webkit-keyframes alpha {from {opacity: 1;} to {opacity: 0.2;}}

Inflexion_point: 50%;

@keyframes beta
	{
	from			{margin: 0em; opacity: 0;}
	10%			{opacity: 0.2;}
	Inflexion_point		{opacity: 0.5;}
	Inflexion_point + 1%	{opacity: 0.6;}
	to			{margin: 1em; opacity: 1;}
	}

